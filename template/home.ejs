		<script> // news.js
			async function generateButtons(containerSelector, folderPath) {
				try {
					// 假設伺服器有目錄列舉，獲取資料夾內容
					const response = await fetch(zzzzzzzzzz.join("total_list", folderPath));
					const html = await response.text();

					// 解析目錄HTML，提取.html檔案
					const parser = new DOMParser();
					const doc = parser.parseFromString(html, 'text/html');
					const links = Array.from(doc.querySelectorAll('a[href$=".html"]'))
						.map(a => a.href.split('/').pop()); // 只取檔名

					const container = document.querySelector(containerSelector);
					container.innerHTML = ''; // 清空

					links.forEach(filename => {
						const button = document.createElement('button');
						button.textContent = `新工具 - ${filename.replace('.html', '')}`;
						button.onclick = () => window.location.href = path.join(folderPath, filename);
						container.appendChild(button);
					});
				} catch (error) {
					console.error('無法讀取資料夾:', error);
				}
			}

			// 使用範例
